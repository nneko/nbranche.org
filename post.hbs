{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}
{{navigation}}
<main class="content" role="main">

    <article class="{{post_class}}">


        {{! Each post has the blog logo at the top, with a link back to the home page }}

        {{! Everything inside the #post tags pulls data from the post }}
        {{#post}}

            <span class="post-meta"><!--<time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time>--> {{tags prefix="" separator=", "}}</span>

            <h1 class="post-title">{{{title}}}</h1>

            <section class="post-content">
                {{content}}
            </section>

            <span class="post-meta-end post-meta">
              {{#author}}
              By <a class="author-posturl" href="{{url}}">{{name}}</a>
              {{/author}}
              on <time datetime="{{date format="YYYY-MM-DD"}}">
                {{date format='DD MMMM YYYY'}}</time>.
            </span>

            {{> share-and-like-strip}}

            <nav class="post-nav">
              <ul style="float: right">
                  {{#prev_post}}
                      <li><a href="{{url}}">&larr; Previous</a></li>
                  {{else}}
                      <li><a href="/">&larr; Home</a></li>
                  {{/prev_post}}
                  {{#next_post}}<li><a href="{{url}}">Next &rarr;</a></li>
                  {{/next_post}}
              </ul>
            </nav>
        {{/post}}

    </article>
</main>
